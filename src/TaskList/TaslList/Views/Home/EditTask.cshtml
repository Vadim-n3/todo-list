@using TaslList.Models;
@model Task


@{

    ViewBag.Title = "Редактирование задачи";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="mt-max">
        <h3>Форма редактирования задачи</h3>
        <form method="post" action="">
            <input type="hidden" value="@Model.Id" name="Id" />

            <div class="form-group">
                <label for="TaskDate">Введите дату:</label>
                <input type="date" class="form-control" id="TaskDate" name="TaskDate" value="@Model.TaskDate.ToString("yyyy-MM-dd")">
            </div>
            <div class="form-group">
                <label for="TaskString">Введите описание задачи:</label>
                <input type="text" class="form-control" id="TaskString" name="TaskString" value="@Model.TaskString">
            </div>
            <div class="form-group">
                <label for="IsTaskDone">Задача выполнена?</label>
                <input type="checkbox" class="form-check-input" id="IsTaskDone" name="IsTaskDone" value="true" checked=@Model.IsTaskDone>
            </div>
            <div class="form-group">
                <input type="submit" value="Изменить" class="btn btn-primary" />
                @Html.ActionLink("Назад", "Index", "Home", new { @class = "btn btn-default" })
            </div>
            @if (TempData["Error"] != null)
            {
                <div class="form-group">
                    <div class="alert alert-danger">
                        <strong>Ошибка!</strong> @TempData["Error"]
                    </div>
                </div>
            }

